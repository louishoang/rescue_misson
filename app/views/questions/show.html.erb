<h2>Yeahh</h2>
<ul>
  <li>Title: <%= @question.title %></li>

  <li>Description: <%= @question.description %></li>
</ul>


<div id="display_answer">
  <% @answers.each do |answer| %>
    <%= answer.description %>
  <% end %>
</div>


<div id="post_answer">
  <%= form_for [@question, @answer] , html: {class: "nifty_form"} do |f| %>
    <label>Description: </label><br><%= f.text_area :description, size: "60x12" %><br>
    <%= f.submit "Create" %>
  <% end %>
</div>

<div id="option">
  <%= link_to 'edit', edit_question_path %>
  <%= link_to 'delete', question_path(@question), method: :destroy %>
</div>
